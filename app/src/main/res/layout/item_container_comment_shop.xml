<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:background="@drawable/comment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageProfile"
        android:src="@drawable/image"
        android:scaleType="centerCrop"
        android:layout_marginBottom="@dimen/_3sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_2sdp"
        app:riv_corner_radius="@dimen/_30sdp"
        android:background="@drawable/oval"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"/>

    <TextView
        android:id="@+id/textName"
        android:textStyle="bold"
        android:text="Tô Văn Quân"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:text=" đã bình luận về đơn hàng của bạn"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginStart="@dimen/_1sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/titleProduct"
        android:textSize="@dimen/_11sdp"
        android:padding="2dp"
        android:textColor="#363636"
        android:text="Iphone 14 xin chao nha"
        android:layout_marginStart="@dimen/_2sdp"
        app:layout_constraintEnd_toStartOf="@id/textstar"
        app:layout_constraintTop_toBottomOf="@id/textName"
        app:layout_constraintStart_toEndOf="@id/imageProfile"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="0dp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_height="wrap_content"
        android:maxLines="1" />

    <TextView
        android:id="@+id/textstar"
        android:text="Star : "
        android:layout_marginTop="@dimen/_6sdp"
        android:textSize="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@id/textName"
        app:layout_constraintEnd_toStartOf="@id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/star"
        android:text="5"
        android:layout_marginTop="@dimen/_6sdp"
        android:textSize="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/textName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>