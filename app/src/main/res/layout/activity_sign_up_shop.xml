<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".shop.SignUp_Shop">

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageBack"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/back" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageProifile"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginTop="16dp"
                android:background="@drawable/oval"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.119"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="@dimen/_55sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Create a sales \n       account"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageProifile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textViewEmail"
            android:text="Email"
            android:layout_marginBottom="@dimen/_2sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:textColor="#999da1"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintBottom_toTopOf="@id/inputEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/inputEmail"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000000"
            android:paddingStart="@dimen/_15sdp"
            android:background="@drawable/input"
            android:inputType="textEmailAddress"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>

        <TextView
            android:id="@+id/textViewFullname"
            android:text="Fullname"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:textColor="#999da1"
            android:textSize="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/inputFullname"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000000"
            android:paddingStart="@dimen/_15sdp"
            android:background="@drawable/input"
            android:inputType="text"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>

        <TextView
            android:id="@+id/textViewPhone"
            android:text="Phone"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:textColor="#999da1"
            android:textSize="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/inputPhone"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000000"
            android:paddingStart="@dimen/_15sdp"
            android:background="@drawable/input"
            android:inputType="phone"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>

        <TextView
            android:id="@+id/textViewDate"
            android:text="Date"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:textColor="#999da1"
            android:textSize="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/inputDate"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000000"
            android:paddingStart="@dimen/_15sdp"
            android:background="@drawable/input"
            android:inputType="date"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>

        <TextView
            android:id="@+id/sonha"
            android:text="House number / Alley name"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:textColor="#999da1"
            android:textSize="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/house_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:background="@drawable/input"
            android:inputType="text"
            android:paddingStart="@dimen/_15sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/soxa"
            android:text="The commune / District"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:textColor="#999da1"
            android:textSize="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/district"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000000"
            android:paddingStart="@dimen/_15sdp"
            android:background="@drawable/input"
            android:inputType="text"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>

        <TextView
            android:id="@+id/sotinh"
            android:text="Province name / City"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:textColor="#999da1"
            android:textSize="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/city"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000000"
            android:paddingStart="@dimen/_15sdp"
            android:background="@drawable/input"
            android:inputType="text"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>

        <TextView
            android:text="Password"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_18sdp"
            android:textColor="#999da1"
            android:textSize="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/inputPassword"
            android:textSize="@dimen/_12sdp"
            android:textColor="#000000"
            android:paddingStart="@dimen/_15sdp"
            android:background="@drawable/input"
            android:inputType="textPassword"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>

        <CheckBox
            android:id="@+id/check_book"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="#000000"
            android:text="Bạn đồng ý điều khoản của chúng tôi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSign"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="@dimen/_11sdp"
                android:text="Log In"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:background="@drawable/button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignUp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="@dimen/_11sdp"
                android:text="Log In"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:background="@drawable/button2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"/>

            <ProgressBar
                android:id="@+id/progesbar"
                android:layout_gravity="center"
                android:indeterminateTint="#000000"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"/>

        </FrameLayout>

    </LinearLayout>

</ScrollView>
