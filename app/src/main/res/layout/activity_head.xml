<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app"
    tools:context=".activitys.Head">

    <ImageView
        android:id="@+id/image"
        android:src="@drawable/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_360sdp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:text="Go to catalog"
        android:layout_marginTop="@dimen/_190sdp"
        android:background="@drawable/go_to_catalog"
        android:textAllCaps="false"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_47sdp"/>

    <TextView
        android:id="@+id/text_one"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        android:text="Ứng dụng này chỉ là một bản demo với mục đích học tập và"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_two"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        android:text="nghiên cứu, không phải là sản phẩm chính thức"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>